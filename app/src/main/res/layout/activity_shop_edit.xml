<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewmodel.view.profil.ShopEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shop_name_edit"
            android:text="@string/shop_name"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_shop_edit"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo_toko"
            android:layout_width="73dp"
            android:layout_height="55dp"/>

        <Button
            android:id="@+id/btn_edit_shop"
            android:layout_below="@+id/tv_shop_name_edit"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_edit_shop"
            android:textColor="#5A5B5C"
            android:text="Ganti Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_deskripsi_toko"
            android:layout_below="@+id/btn_edit_shop"
            android:text="Deskripsi Toko"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_shop_desc"
            android:layout_below="@+id/tv_deskripsi_toko"
            android:text="@string/lorem_ipsum"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_"
            android:layout_below="@+id/et_shop_desc"
            android:text="Nomor Telepon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</ScrollView>